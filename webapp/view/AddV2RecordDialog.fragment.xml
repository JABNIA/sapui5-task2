<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="addV2RecordDialog"
        title="{i18n>addNewProduct}"
        contentWidth="30%"
    >
        <HBox
        direction="Column"
        class="sapUiSmallMargin"
        >
            <Label
                labelFor="ProductName"
                text="{i18n>productName}"
            />
            <Input
                id="ProductName"
                type="Text"
            />
            <Label
                labelFor="ProductDescription"
                text="{i18n>description}"
            />
            <Input
                id="ProductDescription"
                type="Text"
            />
            <Label
                labelFor="ProductReleaseDate"
                text="{i18n>releaseDate}"
            />
            <DatePicker
                id="ProductReleaseDate"
            />
            <Label
                labelFor="ProductDiscontinuedDate"
                text="{i18n>discontinuedDate}"
            />
            <DatePicker
                id="ProductDiscontinuedDate"
            />
            <Label
                labelFor="ProductRating"
                text="{i18n>rating}"
            />
            <Input
                id="ProductRating"
                type="Number"
            />
                        <Label
                labelFor="ProductPrice"
                text="{i18n>price}"
            />
            <Input
                id="ProductPrice"
                type="Number"
            />
        </HBox>
        <beginButton>
            <Button
                text="{i18n>addRecord}"
                press=".onAddV2Record"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press=".onCloseDialog"
                app:dialogType="AddV2Record"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>