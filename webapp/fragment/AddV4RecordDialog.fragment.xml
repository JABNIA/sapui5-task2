<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="addV4RecordDialog"
        title="{i18n>addNewProduct}"
        contentWidth="30%"
    >
        <HBox
        direction="Column"
        class="sapUiSmallMargin"
        >
            <Label
                labelFor="Product-Name"
                text="{i18n>EnterProductName}"
            />
            <Input
                id="Product-Name"
                type="Text"
                required="true"
                value="{ODataV4>Name}"
                valueStateText="{i18n>productNameInputValueState}"
                change=".onInputFieldValueChange"
            />
            <Label
                labelFor="Product-Description"
                text="{i18n>EnterProductDescription}"
            />
            <Input
                id="Product-Description"
                type="Text"
                value="{ODataV4>Description}"
                required="true"
                valueStateText="{i18n>productDescriptionInputValueState}"
                change=".onInputFieldValueChange"
            />
            <Label
                labelFor="Product-ReleaseDate"
                text="{i18n>EnterProductReleaseDate}"
            />
            <DatePicker
                id="Product-ReleaseDate"
                value="{ODataV4>ReleaseDate}"
                required="true"
                valueStateText="{i18n>productReleaseDateInputValueState}"
                change=".onInputFieldValueChange"
            />
            <Label
                labelFor="Product-DiscontinuedDate"
                text="{i18n>discontinuedDate}"
            />
            <DatePicker
                id="Product-DiscontinuedDate"
                value="{ODataV4>DiscontinuedDate}"
            />
            <Label
                labelFor="Product-Rating"
                text="{i18n>EnterProductRating}"
            />
            <Input
                id="Product-Rating"
                type="Number"
                required="true"
                value="{ODataV4>Rating}"
                valueStateText="{i18n>productRatungInputValueState}"
                change=".onInputFieldValueChange"
            />
            <Label
                labelFor="Product-Price"
                text="{i18n>EnterProductPrice}"
            />
            <Input
                id="Product-Price"
                type="Number"
                required="true"
                value="{ODataV4>Price}"
                valueStateText="{i18n>productPriceInputValueState}"
                change=".onInputFieldValueChange"
            />
        </HBox>
        <beginButton>
            <Button
                id="action-Button"
                text="{i18n>saveRecord}"
                press=".onAddV4ModelRecord"
                app:id="addV4RecordDialog"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press=".onCloseV4ModelAddRecordDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>