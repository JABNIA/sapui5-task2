<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="addV2RecordDialog"
        title="{i18n>addNewProduct}"
        contentWidth="30%"
    >
        <HBox
        direction="Column"
        class="sapUiSmallMargin"
        >
            <Label
                labelFor="ProductName"
                text="{i18n>EnterProductName}"
            />
            <Input
                id="ProductName"
                type="Text"
                value="{ODataV2>Name}"
            />
            <Label
                labelFor="ProductDescription"
                text="{i18n>EnterProductDescription}"
            />
            <Input
                id="ProductDescription"
                type="Text"
                value="{ODataV2>Description}"
            />
            <Label
                labelFor="ProductReleaseDate"
                text="{i18n>EnterProductReleaseDate}"
            />
            <DatePicker
                id="ProductReleaseDate"
                value="{
                path: 'ODataV2>ReleaseDate',
                type: 'sap.ui.model.odata.type.DateTime'
                }"
            />
            <Label
                labelFor="ProductDiscontinuedDate"
                text="{i18n>discontinuedDate}"
            />
            <DatePicker
                id="ProductDiscontinuedDate"
                value="{
                path: 'ODataV2>DiscontinuedDate',
                type: 'sap.ui.model.odata.type.DateTime'
                }"
            />
            <Label
                labelFor="ProductRating"
                text="{i18n>EnterProductRating}"
            />
            <Input
                id="ProductRating"
                type="Number"
                value="{ODataV2>Rating}"
            />
            <Label
                labelFor="ProductPrice"
                text="{i18n>EnterProductPrice}"
            />
            <Input
                id="ProductPrice"
                type="Number"
                value="{ODataV2>Price}"
            />
        </HBox>
        <beginButton>
            <Button
                id="actionButton"
                text="{i18n>saveRecord}"
                press=".onAddV2Record"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press=".onCloseDialog"
                app:dialogType="AddV2Record"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>