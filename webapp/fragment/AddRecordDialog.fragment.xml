<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <Dialog
        id="addRecordDialog"
        title="{i18n>addNewBookRecord}"
        contentWidth="30%"
    >
        <HBox
        direction="Column"
        class="sapUiSmallMargin"
        >
            <Label
                labelFor="bookName"
                text="{i18n>enterBookName}"
            />
            <Input
                id="bookName"
                type="Text"
                value="{viewModel>/newObject/name}"
            />
            <Label
                labelFor="bookAuthor"
                text="{i18n>enterAuthorName}"
            />
            <Input
                id="bookAuthor"
                type="Text"
                value="{viewModel>/newObject/author}"
            />
            <Label
                labelFor="bookGenre"
                text="{i18n>enterGenre}"
            />
            <Input
                id="bookGenre"
                type="Text"
                value="{viewModel>/newObject/genre}"
            />
            <Label
                labelFor="bookReleaseDate"
                text="{i18n>enterReleaseDate}"
            />
            <Input
                id="bookReleaseDate"
                type="Date"
                value="{viewModel>/newObject/releasedate}"
            />
            <Label
                labelFor="bookAvailableQuantity"
                text="{i18n>enterAvailableQuantity}"
            />
            <Input
                id="bookAvailableQuantity"
                type="Number"
                value="{viewModel>/newObject/availablequantity}"
            />
        </HBox>
        <beginButton>
            <Button
                text="{i18n>addRecord}"
                press=".onAddRecord"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>cancel}"
                press=".onCloseDialog"
                app:dialogType="AddRecord"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>